<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    app:cardElevation="0sp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="@string/meeting_id_copy_title"
            android:textAppearance="@style/FontPath.SemiBold"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:layout_marginTop="10dp"
            android:text="@string/meeting_id_copy_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtMeetingURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp" />

            <ImageView
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/ic_copy"
                android:id="@+id/imgCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/ic_share"
                android:id="@+id/imgShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="@string/continue_meeting"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:rippleColor="@color/colorPrimaryDark"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="20dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>